<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
	    android:id="@+id/wheelmap_map_loading"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <ProgressBar
		    style="?android:attr/progressBarStyleLarge"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_gravity="center" />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/wheelmap_loading_nodes"
		    android:layout_gravity="center" />
    </LinearLayout>
    
    <Button
        android:id="@+id/wheelmap_nodes_filter_button"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wheelmap_nodes_filter" />

    <ListView android:id="@+id/wheelmap_map_node_list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        
        
    <LinearLayout android:id="@+id/wheelmap_map_node_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
