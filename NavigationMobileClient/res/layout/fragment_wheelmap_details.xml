<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
		android:layout_margin="10dp" >

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal"
	        android:layout_marginBottom="5dp">
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:layout_weight="2">
	
	            <TextView
	                android:id="@+id/wheelmap_node_name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textSize="20sp" />
	
	            <TextView
	                android:id="@+id/wheelmap_node_housenumber"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" />
	
	            <TextView
	                android:id="@+id/wheelmap_node_street"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" />
	
	            <TextView
	                android:id="@+id/wheelmap_node_city"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" />
	
	            <TextView
	                android:id="@+id/wheelmap_node_postcode"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" />
	
	            <TextView
	                android:id="@+id/wheelmap_node_phone"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content" />
	
	            <TextView
		            android:id="@+id/wheelmap_node_website"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />
	        </LinearLayout>        
	
	        <ImageView
	            android:id="@+id/wheelmap_node_accessible"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@android:drawable/ic_menu_report_image"
	            android:contentDescription="@string/wheelmap_details_icon_alt_unknown"
	            android:layout_weight="1" />
	    </LinearLayout>
		
	    <View
	    	android:layout_width="fill_parent"
	    	android:layout_height="1dp"
	    	android:background="@android:color/darker_gray"/>
	    
	    <TextView
	        android:id="@+id/wheelmap_node_description"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	
	    <HorizontalScrollView
	        android:id="@+id/horizontalScrollView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <LinearLayout android:id="@+id/wheelmap_node_photos"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	        </LinearLayout>
	        
	    </HorizontalScrollView>

	    
	
	</LinearLayout>
    
    <Button
        android:id="@+id/wheelmap_node_ok"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:text="@string/wheelmap_node_details_choose_button_text" />
    
</RelativeLayout>


