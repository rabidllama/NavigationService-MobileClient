<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <FrameLayout android:id="@+id/search_place_text_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>      
    
    <FrameLayout android:id="@+id/search_place_buttons_holder" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
    
    <FrameLayout android:id="@+id/search_place_map_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_place_text_holder"
        android:layout_above="@id/search_place_buttons_holder" />  

</RelativeLayout>
